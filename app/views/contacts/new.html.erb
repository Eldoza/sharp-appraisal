<div class="container">
  <div class="col-md-12 big">
    <div class="panel panel-default">
      <div class='panel-heading center' id='contact_header'>Contact Us</div>
      <div class='panel-body center'>
        <%= simple_form_for @contact do |f| %>
          <%= f.error_notification %>

        <div class="form-group row">

          <div class="form-group row">
            <div class="col-md-6">
              <%= f.input :name, :required => true, placeholder: 'Name', label_html: { class: "col-md-6 col-form-label" } %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-md-6">
              <%= f.input :email, :required => true, placeholder: 'Email', label_html: { class: "col-md-6 col-form-label" } %>
            </div>
          </div>
          <div class="col-md-6">
              <%= f.input :message, :as => :text, :required => true, :input_html => {:rows => 6}, placeholder:'Tell us about your appraisal needs...', label_html: { class: 'col-md-6 col-form-label'} %>

              <div class= "hidden">
                <%= f.input :nickname, :hint => 'Leave this field blank!' %>
              </div>
          </div>

        </div>


        <%= f.button :submit, 'Send message', :class=> "btn btn-primary btn-full" %>

      </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
